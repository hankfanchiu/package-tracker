<div id="send-pin">
  <h3>What's your phone number?</h3>
  <%= form_for @package, remote: true do |f| %>
    <div class="form-group">
      <%= f.text_field :phone_number %>
    </div>

    <h4>Tracking Number</h4>
    <div class="form-group">
      <%= f.text_field :tracking_number %>
    </div>

    <%= f.submit "Send PIN", class: "btn btn-primary", id: 'send-pin-link' %>
  <% end %>
</div>

<div id="verify-pin">
  <h3>Enter your PIN</h3>
  <%= form_tag verify_packages_path, remote: true do |f| %>
    <%= hidden_field_tag 'hidden_phone_number', '' %>
    <div class="form-group">
      <%= text_field_tag :pin %>
    </div>
    <%= submit_tag "Verify PIN", class: "btn btn-primary" %>
  <% end %>
</div>

